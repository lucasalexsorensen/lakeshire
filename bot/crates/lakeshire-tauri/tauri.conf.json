{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "bot",
  "version": "0.1.0",
  "identifier": "com.lucasalexsorensen.bot",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "bot",
        "width": 800,
        "height": 600,
        "transparent": true,
        "decorations": true,
        "shadow": true,
        "minimizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
